<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/img_4"
    android:orientation="vertical"
    android:padding="15dp"
    tools:context=".signup">





  <TextView
  android:id="@+id/text1"
  android:layout_width="fill_parent"
  android:layout_height="wrap_content"
      android:gravity="center"
  android:textStyle="bold"
  android:textSize="35dp"
  android:textColor="#FF5722"
  android:text="  Signup Page"

  />

  <ImageView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:src="@drawable/img_3"
    android:layout_gravity="center"/>



  <EditText
    android:id="@+id/editfname"
      android:layout_width="fill_parent"
      android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:background="#039BE5"
    android:drawableStart="@drawable/baseline_person_24"
    android:drawablePadding="5dp"
    android:gravity="center_vertical"
    android:hint="ENter Full Name"
    android:inputType="textCapWords"
    android:singleLine="true"
    android:textColor="@color/black"
      android:textStyle="bold"
    android:textColorHint="@color/white"
    android:textSize="23dp"/>

  <View
      android:layout_width="fill_parent"
      android:layout_height="1px"
      android:background="@color/white" />

  <EditText
    android:id="@+id/editemail"
      android:layout_width="fill_parent"
      android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:background="#8C9EFF"
    android:drawablePadding="5dp"
    android:gravity="center_vertical"
      android:drawableStart="@drawable/baseline_attach_email_24"
    android:hint="ENter Email"
    android:inputType="textEmailAddress"
    android:singleLine="true"
    android:textColor="@color/black"
    android:textStyle="bold"
    android:textSize="23dp"/>


  <EditText
      android:id="@+id/editpassword"
      android:layout_width="fill_parent"
      android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:background="#84FFFF"
    android:drawablePadding="5dp"
    android:gravity="center_vertical"
    android:drawableStart="@drawable/baseline_content_paste_24"
    android:hint="Enter password"
    android:inputType="textPassword"
    android:singleLine="true"
    android:textSize="23dp"
    android:textStyle="italic"/>

  <EditText
      android:id="@+id/editCpassword"
      android:layout_width="fill_parent"
      android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:background="#F4FF81"
      android:drawablePadding="5dp"
    android:layout_gravity="center_vertical"
    android:drawableStart="@drawable/baseline_content_paste_24"
    android:hint="Confirm password"
    android:inputType="textPassword"
    android:textStyle="italic"
    android:textSize="23dp"/>

  <CheckBox
      android:id="@+id/terms_conditions"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginTop="50dp"
      android:text="  Agree with our terms_conditions"
      android:textColor="@color/black"
      android:background="#43A047"
      android:textSize="22sp" />
  
  
  <Button
    android:id="@+id/btnsignup"
      android:layout_width="fill_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="20dp"
      android:padding="2dp"
      android:text="SignUp"
      android:textStyle="normal"
      android:textSize="30dp"
      android:backgroundTint="#E53935"
      android:textColor="@color/black"

      />

  <TextView
      android:id="@+id/loginText"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="Already an user? Login"
      android:layout_gravity="center"
      android:padding="8dp"
      android:textSize="25sp"
      android:layout_marginTop="8dp"

      />
  








  
  

  










  </LinearLayout>